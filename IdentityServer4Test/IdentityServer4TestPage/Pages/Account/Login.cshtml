@page
@model IdentityServer4TestPage.Pages.Account.LoginModel
@{
    Layout = "~/Pages/Shared/_LayoutMainPage.cshtml";
}

<form id="form1" method="post" class="d-flex justify-content-center" style="margin-top:50px">
    <div class="card" style="width:30rem">
        <div class="card-body">
            <div class="form-group">
                <label for="account">Account</label>
                <input type="text" class="form-control" id="account" name="UserName" aria-describedby="accountHelp">
                <small id="accountHelp" class="form-text text-muted">Please input your correct account</small>
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control" id="password" name="Password">
            </div>
            <button id="login" name="button" type="submit" value="login" class="btn btn-primary">Login</button>
            <button id="register" name="button" type="button" value="register" class="btn btn-link">Register</button>
            <div id="errorMessage" class="alert alert-danger" role="alert" style="margin-top:20px;display:none">
                Invalid account or password!Please check and try again!
            </div>
        </div>
    </div>

    
    
</form>
<script>
    $(function () {
        @if (ViewData["LoginError"] != null && ViewData["LoginError"].ToString() == "InvalidLogin")
        { 
            <text>
            $("#errorMessage").css("display", "");
            </text>
        }

        $("#register").on("click", function () {
            window.location.href = "/Account/Register";
        });
    });
</script>