@page
@model IdentityServer4TestPage.Pages.Account.RegisterModel
@{
    Layout = "~/Pages/Shared/_LayoutMainPage.cshtml";
}

<form id="form1" class="d-flex justify-content-center" style="margin-top:50px">
    <div class="card" style="width:30rem">
        <div class="card-body">
            <div class="form-group">
                <label for="account">Account</label>
                <input type="text" class="form-control" id="account" aria-describedby="accountHelp">
                <small id="accountHelp" class="form-text text-muted">Please input your correct account</small>
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control" id="password">
            </div>
            <div class="form-group">
                <label for="passwordValidate">Confirm-Password</label>
                <input type="password" class="form-control" id="passwordValidate">
            </div>
            <button id="register" name="button" value="register" type="submit" class="btn btn-primary">Register</button>
            <button id="backToLogin" name="button" value="backToLogin" type="button" class="btn btn-link">Back to login</button>
        </div>
    </div>
</form>
<script>
    $(function () {
        $("#backToLogin").on("click", function () {
            window.location.href = "Login"
        });
    });
</script>
